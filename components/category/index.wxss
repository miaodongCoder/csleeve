/* components/index.wxss */
.container {
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.inner-container {
    width: 730rpx;
    height: 300rpx;
    border: 1px dashed #DCEBE6;
}

.grid-item {
    /*给一个最小的宽度 ,
    注意 , 一行的数量如果过多不满足这个宽度那么就算写5个 , 6个也不会显示 ,
    必须继续缩小这个宽度
    width: 200rpx;
    */
    width: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.img {
    width: 60rpx;
    height: 60rpx;
}

.text {
    margin-top: 6rpx;
    font-size: 24rpx;
    color: #333333;
}
